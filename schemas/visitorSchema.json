{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Visitor",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "company": {
      "type": "string",
      "minLength": 1
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "purpose": {
      "type": "string"
    }
  },
  "required": ["name", "company"],
  "additionalProperties": false
}
